<h2>Sign up</h2>


<%= form_with model: @user, url: user_registration_path,local: true,class: "form-group" do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"exampleInputEmail1", placeholder:"Enter email" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>

<div class="form-group" >
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control", id:"exampleInputPassword1" ,placeholder:"Password" %>
</div>
    
    <div class="form-group" >
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" ,id:"exampleInputPassword1" ,placeholder:"Password" %>
  </div>

  <div class="actions">
   <%= f.submit "Sign up" ,class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

    
  
  



